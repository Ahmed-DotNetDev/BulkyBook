@model IEnumerable<Category>
@{
    ViewData["Title"] = "Result";
}

<h1>Result</h1>



<br />
<br />
@using (Html.BeginForm("Result", "Category", FormMethod.Get, new { @class = "form-inline pt-4 pb-1" }))
{
    <div class="input-group">
        @Html.TextBox("searching", null, new { @class = "form-control", placeholder = "Search", required = "required" })
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="submit">Search</button>
        </div>
    </div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Category Id</th>
            <th>Category Name</th>
            <th>Category order</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" style="color:red">
                    No match any book
                </td>
            </tr>
        }
        else
        {
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.DisplayOrder</td>
                </tr>
            }
        }
    </tbody>
</table>