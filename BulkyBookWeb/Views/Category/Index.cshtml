@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}


<div class="container">
    <div class="row mt-3 pt-1 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Category" asp-action="Create"><i class="bi bi-plus-circle-fill"></i> &nbsp; Create New Category</a>
        </div>
    </div>

        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Category Name</th>
                    <th scope="col">Display Order</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                
                    @foreach(var obj in Model)
                    {
                        <tr>
                        <td style="width:20%">@obj.Id</td>
                        <td style="width:35%">@obj.Name</td>
                        <td style="width:20%">@obj.DisplayOrder</td>
                       <td>
                           <div class="btn-group">
                            <a class="btn btn-primary" asp-action="Edit" asp-controller="Category" asp-route-id="@obj.Id"> <i class="bi bi-pencil-square"></i>&nbsp;Edit</a>
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <a class="btn btn-danger" asp-action="Delete" asp-controller="Category" asp-route-id="@obj.Id"> <i class="bi bi-trash3-fill"></i>&nbsp;Delete</a>
                           </div>
                       </td>
                        </tr>             
                    }
                
               
            </tbody>
        </table>
